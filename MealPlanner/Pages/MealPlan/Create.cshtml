@page
@model MealPlanner.Pages.MealPlan.CreateModel

@{
    ViewData["Title"] = "Add new plan";
}

<h2>Create</h2>

<h4>Plan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Plan.Date" class="control-label"></label>
                <input asp-for="Plan.Date" class="form-control" />
                <span asp-validation-for="Plan.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plan.Notes" class="control-label"></label>
                <input asp-for="Plan.Notes" class="form-control" />
                <span asp-validation-for="Plan.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


